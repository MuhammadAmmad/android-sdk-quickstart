<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/message_item_cell_padding_far"
        android:layout_marginLeft="@dimen/message_item_cell_padding_near"
        android:layout_marginRight="@dimen/message_item_cell_padding_far"
        android:layout_marginStart="@dimen/message_item_cell_padding_near"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_item_cell_me"
        android:padding="4dp"
        android:textSize="16sp"
        tools:text="Sample message" />

    <TextView
        android:id="@+id/message_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/message_item_cell_padding_far"
        android:layout_marginLeft="@dimen/message_item_cell_padding_near"
        android:layout_marginRight="@dimen/message_item_cell_padding_far"
        android:layout_marginStart="@dimen/message_item_cell_padding_near"
        android:textSize="12sp"
        tools:text="16:45 April 5" />

</LinearLayout>